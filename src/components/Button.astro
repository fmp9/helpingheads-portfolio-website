---
const { variant = "primary", href, ...props } = Astro.props;
import "../styles/global.css";
---

<button class={`btn ${variant}`} {...props}>
  <slot />
</button>

<style>
  .btn {
    padding: 0.75rem 1.75rem;
    border-radius: 999px;
    cursor: pointer;
    width: fit-content;
  }

  .btn.primary {
    background-color: #e5e7eb;
    color: #1f2937;
  }

  .btn.primary:hover {
    background-color: white;
  }

  .btn.secondary {
    background-color: var(--btn-col);
    border: var(--text-grey) 1px solid;
    color: var(--text-grey);
  }

  .btn.secondary:hover {
    background-color: #d1d5db;
  }
</style>
